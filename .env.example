# Режим отладки (true/false)
DEBUG=true

# Окружение (local, development, production)
ENVIRONMENT=local


# База данных PostgreSQL

# Для Docker Compose используйте:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/hack_change

# Для локальной разработки (если PostgreSQL на localhost) используйте:
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hack_change

# - Docker: postgresql+asyncpg://postgres:postgres@db:5432/hack_change
# - Локально: postgresql+asyncpg://postgres:postgres@localhost:5432/hack_change
# - С паролем: postgresql+asyncpg://user:STRONG_PASSWORD@localhost:5432/hack_change




# ML Модель

# Путь к ML-модели (относительно корня проекта backend)
MODEL_PATH=models/sentiment_model

# Размер батча для обработки текстов
BATCH_SIZE=32


# Frontend (Vite)

# URL бэкенд API для фронтенда
# Для локальной разработки:
VITE_API_URL=http://localhost:8000
